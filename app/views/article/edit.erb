<!DOCTYPE html>
<html>
<head><title>Edit <%=@article.title%></title></head>

<body>
<h1>Edit <%=@article.title%></h1>

<form action="/articles/<%=@article.id %>" method="POST">
    <input type="hidden" name='_method' value="PATCH">
    <label for="title">Title:</label>
    <input type="text" name="title" value="<%=@article.title%>">
    <label for = "contributor_id">Username:</label>
    <select name="contributor_id">
        <% @contributors.each do |contributor|%>
           <option value="<%=contributor.id%>"> <%= contributor.username%></option>
        <% end %>
    </select>
    <br>
    <label for="content">Content:</label>
    <br>
    <textarea name="content" rows="20" columns="180">
    <%= @article.content%></textarea>
    <br>
    <input type="submit" value="Edit Article">
</form>

<a href='/'>Back to homepage</a>
</body>
</html>